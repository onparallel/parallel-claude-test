{
  "private": true,
  "workspaces": [
    "bin",
    "client",
    "emails",
    "server",
    "e2e"
  ],
  "scripts": {
    "lint": "eslint --config .eslintrc.js .",
    "update-deps": "yarn ncux && yarn ncux --packageFile bin/package.json && yarn ncux --packageFile client/package.json && yarn ncux --packageFile server/package.json  && yarn ncux --packageFile e2e/package.json",
    "ncux": "ncu -u -x escape-string-regexp,p-all,p-map,p-props,redoc,node-fetch,@types/node-fetch",
    "postinstall": "patch-package",
    "postpull": "yarn && cd server && yarn migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-formatjs": "^2.17.6",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "npm-check-updates": "^11.8.5",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "patch-package": "^6.4.7"
  },
  "_resolutions_why": {
    "@apollo/client": "@types/apollo-upload-client is depending on an old version which is causing build issues"
  },
  "resolutions": {
    "@apollo/client": "^3.4.8",
    "core-js": "^3.17.2"
  }
}
