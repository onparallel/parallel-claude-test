{
  "private": true,
  "workspaces": [
    "bin",
    "client",
    "emails",
    "server",
    "e2e"
  ],
  "scripts": {
    "lint": "eslint --config .eslintrc.js .",
    "update-deps": "yarn ncux && yarn ncux --packageFile bin/package.json && yarn ncux --packageFile client/package.json && yarn ncux --packageFile server/package.json  && yarn ncux --packageFile e2e/package.json",
    "ncux": "ncu -u -x chalk,escape-string-regexp,p-all,p-map,p-props,node-fetch,@types/node-fetch,file-type",
    "postinstall": "patch-package",
    "postpull": "yarn && cd server && yarn migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-formatjs": "^2.19.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "graphql": "^15.6.1",
    "npm-check-updates": "^12.0.3",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "patch-package": "^6.4.7"
  },
  "_resolutions_why": {
    "@apollo/client": "@types/apollo-upload-client is depending on an old version which is causing build issues",
    "graphql": "need nexus 1.2.0 released for v16 support"
  },
  "resolutions": {
    "@apollo/client": "^3.5.6",
    "graphql": "^15.6.1",
    "@graphql-typed-document-node/core": "^3.1.1",
    "core-js": "^3.19.3",
    "@types/react": "^17.0.37"
  }
}
