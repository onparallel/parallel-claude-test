{
  "private": true,
  "workspaces": [
    "bin",
    "client",
    "emails",
    "server",
    "e2e"
  ],
  "scripts": {
    "lint": "eslint --config .eslintrc.js .",
    "update-deps": "ncu -u && ncu -u --packageFile bin/package.json && ncu -u --packageFile client/package.json && ncu -u --packageFile server/package.json  && ncu -u --packageFile e2e/package.json",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-formatjs": "^2.14.9",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "npm-check-updates": "^11.5.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "patch-package": "^6.4.7"
  }
}
