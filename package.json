{
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "bin",
    "client",
    "server",
    "e2e"
  ],
  "scripts": {
    "lint": "eslint --config .eslintrc.js .",
    "update-deps": "yarn ncux && yarn ncux --packageFile bin/package.json && yarn ncux --packageFile client/package.json && yarn ncux --packageFile server/package.json  && yarn ncux --packageFile e2e/package.json",
    "ncux": "ncu -u -x 'chalk,escape-string-regexp,p-all,p-map,p-props,node-fetch,@types/node-fetch,file-type,playwright,react-select,@types/react-select,framer-motion'",
    "postinstall": "patch-package",
    "postpull": "yarn && cd server && yarn migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-formatjs": "^3.0.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.28.0",
    "graphql": "^16.3.0",
    "npm-check-updates": "^12.4.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "patch-package": "^6.4.7"
  },
  "resolutions": {
    "@graphql-typed-document-node/core": "^3.1.1",
    "core-js": "^3.21.1",
    "@types/react": "^17.0.38"
  }
}
