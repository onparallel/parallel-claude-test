{
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "bin",
    "client",
    "server",
    "e2e"
  ],
  "scripts": {
    "lint": "eslint --config .eslintrc.js .",
    "update-deps": "yarn ncux && yarn ncux --packageFile bin/package.json && yarn ncux --packageFile client/package.json && yarn ncux --packageFile server/package.json  && yarn ncux --packageFile e2e/package.json",
    "ncux": "ncu -u -x 'chalk,camelcase,escape-string-regexp,p-all,p-map,p-props,node-fetch,@types/node-fetch,file-type,framer-motion,react,react-dom,@types/react,@types/react-dom,graphql-upload,@types/graphql-upload,@chakra-ui/react,next,@next/bundle-analyzer,email-providers'",
    "postinstall": "patch-package",
    "postpull": "yarn && cd server && yarn migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-formatjs": "^4.6.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.32.2",
    "graphql": "^16.6.0",
    "npm-check-updates": "^16.6.3",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.8.3"
  },
  "dependencies": {
    "patch-package": "^6.5.1"
  },
  "resolutions": {
    "core-js": "^3.27.2",
    "@types/react": "^17.0.53",
    "@types/express": "^4.17.16"
  }
}
