[Unit]
Description=parallel server
After=network.target

[Service]
Environment=PORT=4000
Environment=NODE_ENV=production
Environment=ENV=#ENV#
Environment=DOTENV_PATH=/home/ec2-user/main/server
# TODO: Remove once pdf export is moved to a worker
Environment=PLAYWRIGHT_BROWSERS_PATH=0
WorkingDirectory=/home/ec2-user/main/server
Type=simple
User=ec2-user
ExecStart=/usr/bin/node /home/ec2-user/main/server/dist/index.js
Restart=always

[Install]
WantedBy=multi-user.target
