[Unit]
Description=parallel client
After=network.target

[Service]
Environment=PORT=3000
Environment=NODE_ENV=production
Environment=ENV=#ENV#
Environment=BUILD_ID=#BUILD_ID#
WorkingDirectory=/home/ec2-user/main/client
Type=simple
User=ec2-user
ExecStart=/home/ec2-user/main/node_modules/.bin/next start
ExecStartPost=/bin/sh -c 'pgrep -xf "node /home/ec2-user/main/node_modules/.bin/next start" | sudo tee /var/run/parallel-client.pid > /dev/null'
Restart=always

[Install]
WantedBy=multi-user.target
